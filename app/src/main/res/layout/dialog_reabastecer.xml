<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_option_holder"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título con fondo azul -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/base_blue">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:text="Reabastecer producto"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/btnCerrar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="@android:color/white" />
    </RelativeLayout>

    <!-- Contenedor Principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_holder_bg"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Imagen del Producto -->

        <ImageView
            android:id="@+id/imgProducto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/btn_holder_bg_white"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp"/>

        <!-- Campos de Información -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Producto"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_producto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_holder_bg_white"
                android:fontFamily="sans-serif-light"
                android:text="Producto"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:paddingLeft="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Caducidad"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/ET_caducidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_holder_bg_white"
                android:clickable="true"
                android:ems="10"
                android:focusable="false"
                android:fontFamily="sans-serif-light"
                android:inputType="date"
                android:paddingLeft="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnReabastecer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/orange"
                android:padding="8dp"
                android:text="Reabastecer"
                android:textColor="@android:color/white"
                android:textSize="24sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
